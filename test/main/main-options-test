#!/bin/sh
#
# Test display and options specific to the main view.

. libtest.sh
. libgit.sh

export LINES=16

tigrc <<EOF
set main-options = -n 10
EOF

steps '
	:save-display with-10-lines.screen
'

git_clone 'repo-one'

test_tig

assert_equals 'with-10-lines.screen' <<EOF
