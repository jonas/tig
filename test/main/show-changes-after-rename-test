#!/bin/sh
#
# Test case from https://github.com/jonas/tig/issues/472

. libtest.sh
. libgit.sh
. "$source_dir/util.sh"

export LINES=4

steps '
	:save-display default.screen
'

git_init

test_setup_work_dir() {
	printf 'data\n' >file1
	git add file1
	git_commit -m "commit1"
	printf 'data\n' >file2
	git add file2
	git rm file1
}

test_tig

assert_equals 'default.screen' <<EOF
$YYY_MM_DD_HH_MM +0000 Unknown   ~ Staged changes
2009-02-13 23:31 +0000 Committer @ [master] commit1
[main] Staged changes                                                       100%
EOF
