#!/bin/sh

. libtest.sh
. libgit.sh

export COLUMNS=181

steps '
	:enter
	:save-display diff-stat.screen
'

tigrc <<EOF
set line-graphics = utf-8
EOF

in_work_dir create_repo_from_tgz "$base_dir/files/scala-js-benchmarks.tgz"

test_tig

assert_equals 'diff-stat.screen' <<EOF
